<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/app_screen_background_color"
    android:orientation="vertical"
    android:transitionName="rootView"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/tvDate"
        style="@style/TextView.Header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        tools:text="10.12.1990" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        tools:text="Loading..." />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bActionButtonOutlined"
        style="@style/Button.Outlined"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/do_some_action" />

    <Button
        android:id="@+id/bActionButton"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:enabled="false"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="@string/do_some_action" />

</LinearLayout>